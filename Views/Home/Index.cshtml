@model List<SolicitudCompra>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Lista de Solicitudes</h1>

    @if (Model.Count == 0)
    {
      <p>Aún no se registran solicitudes</p>  
    }

<div class="row mt-5">
        @foreach (var compra in Model)
        {
            <div class="card col-4" style="width: 18rem">
            <img src="@compra.Foto" class="card-img-top" >
                <div class="card-body">
                    <h5 class="card-title">Card title</h5>
                   <p>
                        Nombre del Producto: @compra.NombreProducto <br>
                        Descripcion: @compra.Descripcion <br>
                        Precio: S/.@compra.Precio <br>
                        Celular de Contacto: @compra.Celular <br>
                        Lugar: @compra.LugarCompra<br>
                        Comprador: @compra.NombreComprador<br>
                        Categoria: @compra.Categoria <br>
                    </p>
                </div>
                
            </div>
        }
</div>
